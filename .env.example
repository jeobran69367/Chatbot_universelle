# Configuration d'environnement pour Docker Compose
# Copier vers .env et ajuster selon vos besoins

#==============================================================================
# Configuration Générale
#==============================================================================
COMPOSE_PROJECT_NAME=chatbot-web-scraper
APP_ENV=production

#==============================================================================
# Configuration des Chemins de Données
#==============================================================================
DATA_PATH=./data
LOGS_PATH=./logs
BLOB_PATH=./blob_storage

#==============================================================================
# Configuration Redis
#==============================================================================
REDIS_PASSWORD=chatbot_secure_password_123

#==============================================================================
# Configuration Ollama
#==============================================================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.1:latest

#==============================================================================
# Configuration Base de Données
#==============================================================================
CHROMA_DB_PATH=/app/data/embeddings

#==============================================================================
# Configuration Streamlit
#==============================================================================
STREAMLIT_THEME_BASE=light
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

#==============================================================================
# Configuration Flask API
#==============================================================================
FLASK_PORT=5001
FLASK_ENV=production

#==============================================================================
# Configuration Monitoring
#==============================================================================
GRAFANA_PASSWORD=admin_secure_password_123

#==============================================================================
# Configuration SSL (optionnel)
#==============================================================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

#==============================================================================
# Configuration Performance
#==============================================================================
WORKER_PROCESSES=2
MAX_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
MAX_PAGES_PER_SITE=100
REQUEST_DELAY=1
CHUNK_SIZE=1000
SIMILARITY_THRESHOLD=0.7

#==============================================================================
# Configuration Logging
#==============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
